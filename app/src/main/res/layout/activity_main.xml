<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.elitesystems.tictactoe.MainActivity"
    android:background="#bcbcbc">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/player1"
        android:src="@drawable/cross"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/score1"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/player1"
        android:layout_alignTop="@+id/player1"
        android:paddingLeft="15dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/player2"
        android:src="@drawable/round"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/score2"
        android:textSize="30dp"
        android:layout_alignTop="@+id/player2"
        android:layout_toLeftOf="@+id/player2"
        android:paddingRight="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tout rÃ©initialiser"
        android:id="@+id/reinit"
        android:layout_centerHorizontal="true"
        android:onClick="reInit" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/grid"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/case0"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"
            android:onClick="dropIn"
            android:alpha="0"
            android:tag="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/case1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="21dp"
            android:onClick="dropIn"
            android:alpha="0"
            android:tag="1" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/case2"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="21dp"
            android:onClick="dropIn"
            android:alpha="0"
            android:tag="2" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/case3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="27dp"
            android:onClick="dropIn"
            android:alpha="0"
            android:tag="3" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/case4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="27dp"
            android:onClick="dropIn"
            android:alpha="0"
            android:tag="4" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/case5"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="27dp"
            android:onClick="dropIn"
            android:alpha="0"
            android:tag="5" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/case6"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="28dp"
            android:onClick="dropIn"
            android:alpha="0"
            android:tag="6" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/case7"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="28dp"
            android:onClick="dropIn"
            android:alpha="0"
            android:tag="7" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/case8"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="28dp"
            android:onClick="dropIn"
            android:alpha="0"
            android:tag="8" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle Partie"
        android:id="@+id/replay"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="replay" />

</RelativeLayout>
